<%- include("templates/header") %>

<div class="container mt-5">
    <% if (!username) { %>
        <div class="text-center">
            <h2>Welcome to NBA Fan Members!</h2>
            <p class="lead">Join our community to access exclusive content.</p>
            <div class="d-flex justify-content-center gap-3">
                <form action="/signup" method="get">
                    <button type="submit" class="btn btn-success btn-lg">Sign Up</button>
                </form>
                <form action="/login" method="get">
                    <button type="submit" class="btn btn-success btn-lg">Log In</button>
                </form>
            </div>
        </div>
    <% } else { %>
        <div class="text-center">
            <h2>Hello, <%= username %>!</h2>
            <p class="lead">Welcome back to the members area.</p>
            <div class="d-flex justify-content-center gap-3">
                <form action="/members" method="get">
                    <button type="submit" class="btn btn-success">Go to Members Area</button>
                </form>
                <form action="/logout" method="get">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

<%- include("templates/footer") %>
